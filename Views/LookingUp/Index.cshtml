<div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
    <div class="text-center">
        <h2>Tra cứu kỳ thi</h2>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#examModal">
            Tra cứu kỳ thi của bạn
        </button>
    </div>
</div>


<div class="modal fade" id="examModal" tabindex="-1" role="dialog" aria-labelledby="examModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="examModalLabel">Bạn muốn tra cứu kỳ thi nào?</h5>
                <button type="button" class="close" style="border: none;background-color: #fff;font-size: 1.3em;"
                    data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="OptionsExam" method="post">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="examType" id="exam1" value="1">
                        <label class="form-check-label" for="exam1">
                            1. Tiếng Anh Tăng Cường
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="examType" id="exam2" value="2">
                        <label class="form-check-label" for="exam2">
                            2. Tiếng Anh Chuẩn Đầu Ra
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="examType" id="exam3" value="3">
                        <label class="form-check-label" for="exam3">
                            3. Chuẩn Đầu Ra Tin Học
                        </label>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-primary" id="submitBtn">Xác nhận</button>
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>