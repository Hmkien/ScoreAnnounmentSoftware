@model ScoreAnnouncementSoftware.Models.ViewModels.ConfigVM
@{
    Layout = "_layoutAdmin";
}
<title>@ViewBag.ExamName</title>

@if (TempData["Message"] != null)
{
    <script>
        alert("@Html.Raw(TempData["Message"].ToString())");
    </script>
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="flex-grow-1 text-center">Kỳ thi: @ViewBag.ExamName</h1>
    <div class="d-flex gap-4">
        <a asp-action="Upload" asp-controller="Exam" class="btn btn-primary" data-toggle="modal"
            data-target="#uploadModal">
            Upload
        </a>
        <a asp-action="Download" asp-controller="Exam" class="btn btn-success">
            Tải xuống file mẫu
        </a>
        <a asp-action="DeleteAll" asp-controller="Exam" class="btn btn-danger">
            Xóa bảng sinh viên
        </a>
    </div>
</div>

<table class="table mt-5">
    <thead>
        <!-- Header table -->
    </thead>
    <tbody>
        <!-- Body table -->
    </tbody>
</table>

<div class="modal fade mt-3" id="uploadModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận tải lên điểm sinh viên</h5>
                <button type="button" class="close" style="border: none; background-color: #fff; font-size: 1.3em;"
                    data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Lựa chọn file upload</p>
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <input type="file" class="form-control-file" id="fileUpload" name="file" required />
                    <input type="hidden" name="examid" value="@Model.ExamId" />
                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-primary mr-2">Upload</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
