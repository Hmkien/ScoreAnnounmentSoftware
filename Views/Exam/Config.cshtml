@model ScoreAnnouncementSoftware.Models.ViewModels.ConfigVM

<div class="alert alert-light text-center" id="alertMessage" style="display: none;"></div>
<div class="d-flex justify-content-end gap-4">
    <a asp-action="Upload" asp-controller="Exam" class="btn btn-primary" data-toggle="modal" data-target="#uploadModal">
        Upload </a>
    <a asp-action="Download" asp-controller="Exam" class="btn btn-success">Tải xuống file mẫu</a>

</div>

<table class="table mt-5">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().Student.StudentCode)</th>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().Student.LastName)</th>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().Student.FirstName)</th>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().IdentificationNumber)</th>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().Student.Faculty)</th>
            <th>@Html.DisplayNameFor(model => model.StudentExams.First().Student.Course)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    </tbody>
</table>
<div class="modal fade mt-3" id="uploadModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận tải lên điểm sinh viên</h5>
                <button type="button" class="close" style="border: none; background-color: #fff; font-size: 1.3em;"
                    data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Lựa chọn file upload</p>
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <input type="file" class="form-control-file" id="fileUpload" name="file" />
                    <input type="hidden" name="examid" value="@Model.ExamId" />
                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-primary mr-2">Upload</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Hủy</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<div id="loading" style="display: none;" class="text-center">
    <div class="spinner-border" role="status">
        <span class="sr-only">Loading...</span>
    </div>
    <p>Đang tải lên, vui lòng chờ...</p>
</div>
@section Scripts
{
    <script>
        document.getElementById('fileUpload').onsubmit = function () {
            document.getElementById('loading').style.display = 'block';
        };
    </script>
}
